<Window x:Class="WpfApp1.AddAnimalWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddAnimalWindow1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Кличка"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="24"/>
        <TextBlock Text="Тип"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Grid.Row="1"
                   FontSize="24"/>
        <TextBlock Text="Вес"
                   Grid.Row="3"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontSize="24"/>
        <TextBlock Text="Рост"
            Grid.Row="4"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontSize="24"/>
        <TextBlock Text="Пол"
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontSize="24"/>

        <TextBox Grid.Column="1"
                 Name="NameTb"
                 Height="45"
                 HorizontalAlignment="Left"
                 Margin="10 0 0 0"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                 Width="200"/>
        <TextBox Grid.Column="1"
                 Grid.Row="1"
                 Name="TypeTb"
                 Height="45"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="10 0 0 0"
                 Width="200"/>
        <TextBox Grid.Column="1"
                 Grid.Row="2"
                 Name="PolTb"
                 Height="45"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="10 0 0 0"
                 Width="200"/>
        <TextBox Grid.Column="1"
          Grid.Row="3"
          Name="VecTb"
          Height="45"
          FontSize="20"
          VerticalContentAlignment="Center"
          HorizontalAlignment="Left"
          Margin="10 0 0 0"
          Width="200"/>
        <TextBox Grid.Column="1"
          Grid.Row="4"
          Name="PostTb"
          Height="45"
          FontSize="20"
          VerticalContentAlignment="Center"
          HorizontalAlignment="Left"
          Margin="10 0 0 0"
          Width="200"/>
        <Button x:Name="SaveBtn"
                Click="SaveBtn_Click"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Height="50"
                Width="120"
                Content="Сохранить"
                FontSize="20"/>
    
    </Grid>
</Window>
