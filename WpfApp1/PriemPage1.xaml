<Page x:Class="WpfApp1.PriemPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Приемы">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView Grid.ColumnSpan="6"
                  Grid.RowSpan="8"
                  Name="ReadersLv"
                  ItemsSource="{Binding }">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Номер" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding }"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="ФИО врача" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding }"/>
                                        <TextBlock Text="{Binding }"/>
                                        <TextBlock Text="{Binding }"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Дата приема" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding }"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Животное" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding }"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Комментарий" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                   
                                        <TextBlock Text="{Binding}"/>
                               
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox Grid.Column="6"
                 Grid.ColumnSpan="2"
                 Grid.Row="1"
                 Height="25"
                 Width="180"
                 Name="TicketSearchTb"
                 TextChanged="TicketSearchTb_TextChanged"
                 VerticalAlignment="Top"
                 Padding="2 0 0 0"/>
        <TextBlock Text="Поиск  по кличке"
                   Grid.Column="6"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin=" 0 0 0 5"/>
        

        <Button x:Name="AddBtn"
                Content="Создать прием"
                Grid.Column="6"
                Grid.ColumnSpan="2"
                Grid.Row="5"
                Margin="10"
                Click="AddBtn_Click"/>
        <Button x:Name="DeleteBtn"
          Content="Создать прием"
          Grid.Column="6"
          Grid.ColumnSpan="2"
          Grid.Row="6"
                Margin="10"
          Click="DeleteBtn_Click"/>
        <Button x:Name="RedactivBtn"
  Content="Редактировать прием"
  Grid.Column="6"
  Grid.ColumnSpan="2"
  Grid.Row="6"
        Margin="10"
  Click="RedactivBtn_Click"/>
        <DatePicker Grid.Row="3"
                    Grid.Column="6"
                    Grid.ColumnSpan="2"
                    Margin="10"
                    x:Name="BirthDateDp"
                    SelectedDateChanged="BirthDateDp_SelectedDateChanged"/>
    </Grid>
</Page>
